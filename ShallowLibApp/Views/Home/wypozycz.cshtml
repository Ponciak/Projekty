
@using Microsoft.AspNetCore.Identity
@using AuthDatabase.Entities;
@model LibraryViewModel
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


@foreach (var library in Model.Items)
{
    <div class="row text-center mr-auto"></div>
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <figure>
                    <a><img src="@library.BlobID" class="img-fluid"></a>
                </figure>
            </div>            
            <div class="myForm col-sm-4" style="margin:0px 0px 30px 0px">
                <div style="margin:auto;color:#C0D06F;font-size:36px"> @library.Title </div>
                <div style="font-family:inherit;font-weight:500;color:#C0D06F ;margin:0px 0px 80px 0px"> @library.AutorName</div>
                <div style="margin:0px 0px 50px 0px">


                    <div class="text-success" style="margin:10px;font-size:28px"><b>Dziękujemy za wypożyczenie :)</b> </div>


                </div>
                <div>

                    <a asp-action="Index" class="btn btn-success"> Powrót</a>
                </div>
            </div>
            <div class="row text-center mr-auto" style=" margin:0px 0px 0px 0px"></div>

            </div>
        </div>
            }
